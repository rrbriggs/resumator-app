
<div class="container text-left">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>Qualifications</h2>
    </div>
    <% @qualifications.each do |qual| %>
      <div class="col-md-8 col-md-offset-2">
        <ul style="list-style-type: circle">
          <li style="font-family: Helvetica"><%= qual.description %>
            <div class="btn-group btn-group-xs" role="group" aria-label="...">
              <%= link_to 'Edit', edit_qualification_path(qual), class: "btn btn-default" %>
              <%= link_to 'Destroy', qual, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </div></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Qualification', new_qualification_path, class: "btn btn-default" %>