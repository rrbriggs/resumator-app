<h1> <%= @person_name %> </h1>
<% if @educations.any? %>
  <h2>Education</h2>
<% end %>
<div>
  <% @educations.each do |edu| %>
    <%= edu.school %> | <%= edu.award %> <br />
    <%= edu.location %> | <%= edu.date %> <br />
    <%= edu.description %>
    <% end %>
</div>

<% if @experiences.any? %>
  <h2>Work Experience</h2>
<% end %>
<div>
  <% @experiences.each do |exp| %>
    <%= exp.title %> | <%= exp.company %> | <%= exp.date %> <br />
    <%= exp.description %>
  <% end %>
</div>

<% if @activities.any? %>
  <h2>Activities and Projects</h2>
<% end %>
<div>
  <% @activities.each do |act| %>
    <%= act.date %> | <%= act.title %> | <%= act.description %>
  <% end %>
  </div>


<% if @qualifications.any? %>
  <h2>Qualifications</h2>
<% end %>

<div>
  <% @qualifications.each do |qual| %>
    <%= qual.description %>
  <% end %>
</div>